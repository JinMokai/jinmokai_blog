{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessConstructor": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"files": {
		"ignore": ["dist/*.js", "node_modules/*"]
	}
}
